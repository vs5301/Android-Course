<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/tony_stark"
                android:layout_margin="20dp"
                android:id="@+id/imgTonyStark"
                />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tony Stark"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgTonyStark"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tony@starkindustries.com"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgTonyStark"
                android:layout_below="@+id/txtName"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/txtPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 11155555"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgTonyStark"
                android:layout_below="@+id/txtEmail"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                />

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/captain_america"
                android:layout_margin="20dp"
                android:id="@+id/imgSteveRogers"
                />

            <TextView
                android:id="@+id/txtNameSteve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steve Rogers"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgSteveRogers"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/txtEmailSteve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="steve@avengers.com"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgSteveRogers"
                android:layout_below="@+id/txtNameSteve"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/txtPhoneNumberSteve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 11155555"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgSteveRogers"
                android:layout_below="@+id/txtEmailSteve"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                />

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/hulk"
                android:layout_margin="20dp"
                android:id="@+id/imgHulk"
                />

            <TextView
                android:id="@+id/txtNameHulk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Bruce Banner"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgHulk"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/txtEmailHulk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="steve@avengers.com"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgHulk"
                android:layout_below="@+id/txtNameHulk"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/txtPhoneNumberHulk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 11155555"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgHulk"
                android:layout_below="@+id/txtEmailHulk"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                />

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/black_panther"
                android:layout_margin="20dp"
                android:id="@+id/imgBlackPanther"
                />

            <TextView
                android:id="@+id/txtNameBlackPanther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T'Challa"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgBlackPanther"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/txtEmailBlackPanther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="steve@avengers.com"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgBlackPanther"
                android:layout_below="@+id/txtNameBlackPanther"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/txtPhoneNumberBlackPanther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 11155555"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgBlackPanther"
                android:layout_below="@+id/txtEmailBlackPanther"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                />

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/widow"
                android:layout_margin="20dp"
                android:id="@+id/imgWidow"
                />

            <TextView
                android:id="@+id/txtWidow"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Natasha Romanov"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgWidow"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/txtEmailWidow"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="steve@avengers.com"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgWidow"
                android:layout_below="@+id/imgWidow"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/txtPhoneNumberWidow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 11155555"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgWidow"
                android:layout_below="@+id/txtEmailWidow"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>